<script>
const music = document.getElementById("bg-music");
const btn = document.getElementById("music-btn");
let playing = false;

btn.onclick = () => {
  if (!playing) {
    music.play();
    btn.innerHTML = "‚è∏Ô∏è";
  } else {
    music.pause();
    btn.innerHTML = "üéß";
  }
  playing = !playing;
};
